
<div>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="row"></th>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Quantidade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in ViewBag.Categorias)
            {
                <tr>
                    <th scope="row">*</th>
                    <td>@categoria.Id</td>
                    <td>@categoria.Nome</td>
                    <td>@categoria.Descricao</td>
                </tr>
            }
        </tbody>
    </table>
</div>